<h1 class="right center">All receivable parties</h1>

<div class="container right center">
  <div class="row">
    <div class="col-xs-12">
      <%= link_to 'Add receivable party', new_receivable_url, class: 'btn btn-success', style:"float: left" %>
      <br>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Date</th>
            <th>Name</th>
            <th>Description</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Image</th>
            <th>Amount</th>
          </tr>
        </thead>
        <tbody>
          <% @receivable.each do |receivable| %>
            <tr>
              <td><%= receivable.date %></td>
              <td><%= receivable.name %></td>
              <td><%= receivable.description %></td>
              <td><%= receivable.phone_no %></td>
              <td><%= receivable.address %></td>
              <td><%= receivable.img %></td>
              <td><%= receivable.amount %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
